                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:ellipsize="end"
                android:focusable="false"
                android:maxLines="7"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

