<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/price_dlg_bg"
    android:minHeight="450dp"
    android:minWidth="1000dp" >

    <LinearLayout
        android:id="@+id/list_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/list_header_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/head_step_level"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="@string/head_price_interval"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="@string/head_price_level"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/price_list"
        android:layout_width="942dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_header"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:cacheColorHint="@android:color/transparent"
        android:clipToPadding="false"
        android:divider="#00000000"
        android:dividerHeight="4dp"
        android:drawSelectorOnTop="false"
        android:listPreferredItemHeight="48dp"
        android:listSelector="#00000000"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="outsideOverlay" />

</RelativeLayout>