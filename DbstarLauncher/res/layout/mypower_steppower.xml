<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1181dp"
    android:layout_height="556dp"
    android:background="@drawable/gd_middle_bj_b" >

    <RelativeLayout
        android:id="@+id/mypower_right_panel"
        android:layout_width="631dp"
        android:layout_height="238dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="210dp"
        android:layout_marginRight="140dp"
        android:background="@drawable/mypower_right_panel" >

        <LinearLayout
            android:layout_width="580dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_gravity="left|center_vertical"
                android:orientation="horizontal" >

                <TextView
                      android:id="@+id/mypower_cost_cycletype"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="left|center_vertical"
                    android:text="@string/mypower_text_monthpowercost"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/mypower_powercost"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="30dp"
                    android:text="@string/demo_str_1"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/str_yuan"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_gravity="left|center_vertical"
                android:orientation="horizontal" >

                <TextView
                     android:id="@+id/mypower_amount_cycletype"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="16dp"
                    android:text="@string/mypower_text_monthpoweramount"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/mypower_poweramount"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/demo_str_2"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/str_degree"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="italic" />
            </LinearLayout> 
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="40dp" >

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="0dp"
                android:background="@null"
                android:indeterminateOnly="false"
                android:max="100"
                android:maxHeight="28dp"
                android:minHeight="28dp"
                android:progress="20"
                android:progressDrawable="@drawable/mypower_progressbar_layer" />

            <TextView
                android:id="@+id/mypower_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="20dp"
                android:gravity="left|center_vertical"
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mypower_left_panel"
        android:layout_width="378dp"
        android:layout_height="306dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="210dp"
        android:layout_marginLeft="140dp"
        android:background="@drawable/power_panel" >

        <ImageView
            android:layout_width="231dp"
            android:layout_height="127dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="56dp"
            android:layout_marginTop="40dp"
            android:scaleType="fitCenter"
            android:src="@drawable/power_ruler" />

        <ImageView
            android:id="@+id/power_pointer"
            android:layout_width="128dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="150dp"
            android:layout_marginTop="140dp"
            android:adjustViewBounds="true"
            android:rotation="0"
            android:src="@drawable/power_pointer"
            android:transformPivotX="108dp"
            android:transformPivotY="20dp" />

        <TextView
            android:id="@+id/steppower_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="90dp"
            android:layout_marginLeft="160dp"
            android:text="@string/demo_str_3"
            android:textColor="#224c62"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="108dp"
            android:gravity="left"
            android:text="@string/mypower_text_powerprice"
            android:textColor="@color/navy"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mypower_powerprice"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="34dp"
            android:layout_marginLeft="148dp"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:text="@string/demo_str_4"
            android:textColor="@color/navy"
            android:textSize="16sp" />

        <!-- ruler -->

        <TextView
            android:id="@+id/steppower_ruler_step0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="148dp"
            android:text="@string/mypower_text_zero"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/steppower_ruler_step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="148dp"
            android:layout_marginTop="103dp"
            android:rotation="-45"
            android:text="@string/demo_str_r1"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp" />

        <TextView
            android:id="@+id/steppower_ruler_step2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="84dp"
            android:rotation="45"
            android:text="@string/demo_str_r2"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp" />
    </RelativeLayout>

