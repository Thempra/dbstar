<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1280dp"
    android:layout_height="720dp"
    android:background="@drawable/gd_view_background" >

    <RelativeLayout
        android:id="@+id/view_header"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp" >

        <ImageView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="52dp"
            android:scaleType="fitXY"
            android:src="@drawable/gd_logo" />

        <!--
             <TextView
            android:id="@+id/pageNumberView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="1186dp"
            android:layout_marginTop="80dp"
            android:gravity="top|center_horizontal"
            android:textColor="#3d3d3d"
            android:textSize="16sp" />
        -->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_content"
        android:layout_width="1181dp"
        android:layout_height="556dp"
        android:layout_below="@id/view_header"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/gd_middle_bj_b" >

        <RelativeLayout
            android:id="@+id/mypower_right_panel"
            android:layout_width="631dp"
            android:layout_height="238dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="210dp"
            android:layout_marginRight="140dp"
            android:background="@drawable/mypower_right_panel" >

            <LinearLayout
                android:layout_width="580dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:layout_gravity="left|center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:gravity="left|center_vertical"
                        android:text="@string/mypower_text_yearpowercost"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/mypower_powercost"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="30dp"
                        android:text="@string/demo_str_1"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="20dp"
                        android:text="@string/str_yuan"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="italic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:layout_gravity="left|center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="16dp"
                        android:text="@string/mypower_text_yearpoweramount"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/mypower_poweramount"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="20dp"
                        android:text="@string/demo_str_2"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/str_degree"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="italic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="left|center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/mypower_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:gravity="left|center_vertical"
                        android:text="@string/mypower_text_target"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mypower_left_panel"
            android:layout_width="378dp"
            android:layout_height="306dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="210dp"
            android:layout_marginLeft="140dp"
            android:background="@drawable/power_panel" >

            <ImageView
                android:layout_width="231dp"
                android:layout_height="127dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="56dp"
                android:layout_marginTop="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/power_ruler" />
            
            <ImageView
                android:layout_width="128dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="150dp"
                android:layout_marginTop="140dp"
                android:adjustViewBounds="true"
                android:transformPivotX="108dp"
                android:transformPivotY="20dp"
                android:rotation="0"
                android:src="@drawable/power_pointer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="128dp"
                android:gravity="left"
                android:text="@string/mypower_text_powerprice"
                android:textColor="@color/navy"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mypower_powerprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="38dp"
                android:layout_marginLeft="148dp"
                android:gravity="left"
                android:text="@string/demo_str_4"
                android:textColor="@color/navy"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="260dp" >

            <TextView
                android:id="@+id/mypower_smartsocket_data_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="left"
                android:text="@string/mypower_text_smartsocket_data"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/mypower_smartsocket_data_title"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="left|center_vertical"
                        android:text="@string/mypower_text_devicepoweramount"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/demo_str_1"
                        android:textColor="@color/orange"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/str_degree"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:text="@string/mypower_text_devicepowercost"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/demo_str_1"
                        android:textColor="@color/orange"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/str_yuan"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </RelativeLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        layout="@layout/footerview" />

</RelativeLayout>