<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/BaseLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:gravity="bottom" >

    <LinearLayout
        android:id="@+id/subtitleLayout_sm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingLeft="6dip" >

        <com.subtitleview.SubtitleView
            android:id="@+id/subTitle_sm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dip"
            android:visibility="invisible" >
        </com.subtitleview.SubtitleView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/subtitleLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" >

        <com.subtitleview.SubtitleView
            android:id="@+id/subTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip" >
        </com.subtitleview.SubtitleView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/infobarLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/movie_play_bk"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/LinearLayout02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/str_time_null" >
                </TextView>

                <SeekBar
                    android:id="@+id/SeekBar02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="25" >
                </SeekBar>

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:text="@string/str_time_null" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/BrowserBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_button"
                    android:gravity="center"
                    android:src="@drawable/backtofold" >
                </ImageButton>

                <ImageButton
                    android:id="@+id/PreBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_button"
                    android:gravity="center"
                    android:src="@drawable/previous" >
                </ImageButton>

                <ImageButton
                    android:id="@+id/FastReverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_button"
                    android:gravity="center"
                    android:src="@drawable/rewind" >
                </ImageButton>

                <ImageButton
                    android:id="@+id/PlayBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_button"
                    android:gravity="center"
                    android:src="@drawable/play" >
                </ImageButton>

                <ImageButton
                    android:id="@+id/FastForward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_button"
                    android:gravity="center"
                    android:src="@drawable/ff" >
                </ImageButton>

                <ImageButton
                    android:id="@+id/NextBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_button"
                    android:gravity="center"
                    android:src="@drawable/next" >
                </ImageButton>

                <ImageButton
                    android:id="@+id/moreBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_button"
                    android:gravity="center"
                    android:src="@drawable/more" >
                </ImageButton>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/BaseLayout2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background" >

        <LinearLayout
            android:id="@+id/LinearLayout_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/minding_bk"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:gravity="center"
                    android:text="@string/setting_subtitle"
                    android:textColor="@drawable/white"
                    android:textSize="24sp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sub_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="left|center"
                    android:text="@string/sub_switch"
                    android:textColor="@drawable/black"
                    android:textSize="24sp" >
                </TextView>

                <ImageButton
                    android:id="@+id/switch_l"
                    android:layout_width="72dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sub_larrow" >
                </ImageButton>

                <TextView
                    android:id="@+id/sub_swith111"
                    android:layout_width="94dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:textColor="@drawable/black"
                    android:textSize="24sp" >
                </TextView>

                <ImageButton
                    android:id="@+id/switch_r"
                    android:layout_width="72dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sub_rarrow" >
                </ImageButton>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sub_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/font_title"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="left|center"
                    android:text="@string/sub_font"
                    android:textColor="@drawable/black"
                    android:textSize="24sp" >
                </TextView>

                <ImageButton
                    android:id="@+id/font_l"
                    android:layout_width="72dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sub_larrow" >
                </ImageButton>

                <TextView
                    android:id="@+id/sub_font111"
                    android:layout_width="94dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:textColor="@drawable/black"
                    android:textSize="24sp" >
                </TextView>

                <ImageButton
                    android:id="@+id/font_r"
                    android:layout_width="72dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sub_rarrow" >
                </ImageButton>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sub_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/color_title"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="left|center"
                    android:text="@string/sub_color"
                    android:textColor="@drawable/black"
                    android:textSize="24sp" >
                </TextView>

                <ImageButton
                    android:id="@+id/color_l"
                    android:layout_width="72dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sub_larrow" >
                </ImageButton>

                <TextView
                    android:id="@+id/sub_color111"
                    android:layout_width="94dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:textColor="@drawable/black"
                    android:textSize="24sp" >
                </TextView>

                <ImageButton
                    android:id="@+id/color_r"
                    android:layout_width="72dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sub_rarrow" >
                </ImageButton>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sub_position_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/position_v_title"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="left|center"
                    android:text="@string/sub_position_v"
                    android:textColor="@drawable/black"
                    android:textSize="24sp" >
                </TextView>

                <ImageButton
                    android:id="@+id/position_v_l"
                    android:layout_width="72dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sub_larrow" >
                </ImageButton>

                <TextView
                    android:id="@+id/sub_position_v111"
                    android:layout_width="94dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:textColor="@drawable/black"
                    android:textSize="24sp" >
                </TextView>

                <ImageButton
                    android:id="@+id/position_v_r"
                    android:layout_width="72dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sub_rarrow" >
                </ImageButton>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sub_ok_on"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/button_ok"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:text="@string/str_ok"
                    android:textColor="@drawable/black"
                    android:textSize="24sp" >
                </Button>

                <Button
                    android:id="@+id/button_canncel"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/str_cancel"
                    android:textColor="@drawable/black"
                    android:textSize="24sp" >
                </Button>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/minding_bk"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/more_title"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@drawable/white"
                android:textSize="24sp" >
            </TextView>

            <ListView
                android:id="@+id/AudioListView"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:cacheColorHint="#00000000"
                android:divider="@color/background"
                android:gravity="center" >
            </ListView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/dialog_bk"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/info_title"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@drawable/white"
                android:textSize="20sp" >
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/filename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/white"
                    android:textSize="18sp" >
                </TextView>

                <TextView
                    android:id="@+id/filetype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@drawable/white"
                    android:textSize="18sp" >
                </TextView>

                <TextView
                    android:id="@+id/filesize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@drawable/white"
                    android:textSize="18sp" >
                </TextView>

                <TextView
                    android:id="@+id/resolution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@drawable/white"
                    android:textSize="18sp" >
                </TextView>

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@drawable/white"
                    android:textSize="18sp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="52dp"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/info_ok"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@drawable/black"
                    android:textSize="20sp" >
                </Button>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
